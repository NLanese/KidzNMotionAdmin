{
    "presets": [
        "next/babel"
    ],
    "plugins": [
        [
            "styled-components", 
            { 
                "ssr": true,
                "displayName": true 
            }
        ],
        ["import", { "libraryName": "antd", "style": true }],
        [
            "module-resolver", {
                "root": [
                    "./"
                ],
                "alias": {
                    "@components": "./components",
                    "@pages": "./components/pages",
                    "@common": "./components/common",
                    "@forms": "./components/forms",
                    "@fields": "./components/fields",
                    "@constants": "./constants",
                    "@modifiers": "./styles/modifiers",
                    "@styles": "./styles",
                    "@containers": "./containers",
                    "@reducers": "./reducers",
                    "@utils": "./utils",                                
                    "@helpers": "./helpers",
                    "@hocs": "./hocs",
                    "@actions": "./actions",
                    "@atoms": "./atoms",
                    "@selectors": "./selectors",
                    "@graphql": "./graphql",
                    "@hooks": "./hooks"
                    
                }
            }
        ]  
    ]
}